%section.header
  %nav.navbar.navbar-default
    .container-fluid
      -# Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#{root_path}") Yelpr

      -# Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav
          %li
            =link_to "Recent Reviews", reviews_path
            <span class="sr-only"> (current)</span>
          %li
            =link_to "Add New Business", new_business_path

        = form_tag search_businesses_path, method: "get", class: "navbar-form navbar-left" do
          .form-group
            = text_field_tag :query, "", placeholder: "Search businesses", class: "form-control"
          %button.btn.btn-default#submit_search(type="submit")
            %i.glyphicon.glyphicon-search
        -unless logged_in?
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to "Register", register_path
            %li
              =link_to "Log In", login_path
        -else
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to "My Profile", user_path(current_user)
            %li
              =link_to "Log Out", logout_path
-#
  %form.navbar-form.navbar-left(role="search", method='get', url="#{search_businesses_path}")
    .form-group
      %input.form-control(type="text" placeholder="Find a Business", name="query")
    %button.btn.btn-default(type="submit")
      %i.glyphicon.glyphicon-search
