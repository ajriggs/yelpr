%section.header
  %nav.navbar.navbar-default
    .container-fluid
      -# Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#") Yelpr

      -# Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        %ul.nav.navbar-nav
          %li
            =link_to "Reviews"#, reviews_path
            <span class="sr-only"> (current)</span>
          %li
            =link_to "My Profile"#, user_path(@user) if current_user
          %li
            =link_to "Add New Business"#, new_business_path

        %form.navbar-form.navbar-left(role="search")
          .form-group
            %input.form-control(type="text" placeholder="Find a Business")
          %button.btn.btn-default(type="submit")
            %i.glyphicon.glyphicon-search
        -#if !current_user
        %ul.nav.navbar-nav.navbar-right
          %li
            %button.btn.btn-primary.navbar-btn.btn-sm(href="/" role="button") Register
          %li
            =link_to "Log In"#, login_path
